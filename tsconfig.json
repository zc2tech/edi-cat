{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020"],
		"outDir": "out",
		"sourceMap": true,
		"strict": false,
		"rootDir": "src",
		"resolveJsonModule": true,
		"allowJs": true,		
		"strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"strictNullChecks":false	
	},
	"include": [
		"src/**/*",
		"src/schemas/**/*.json"
	  ],
	  "exclude": [
		"node_modules",
		"dist",
		"docs"
	  ]
}
